<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ticketsRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        tools:context="com.ivanasen.smarttickets.ui.fragments.MyTicketsFragment">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ticketsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="@dimen/default_padding"
            android:visibility="gone"
            tools:listitem="@layout/list_item_ticket" />

        <LinearLayout
            android:id="@+id/emptyViewLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_ticket_alt"
                android:tint="@android:color/secondary_text_light_nodisable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/it_s_empty_here_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/secondary_text_light_nodisable" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/ticketDetailView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparentDark"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="@dimen/default_margin"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="26dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ticketEventImageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/gradient_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ticketEventName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/default_margin"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Concert"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                    </LinearLayout>


                    <include layout="@layout/seperator_view_layout" />

                    <TextView
                        android:id="@+id/eventDateView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:text="January 18, 1970"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:id="@+id/eventLocationViewView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:drawableStart="@drawable/ic_location_on_black_24dp"
                        android:text="Dupnica, Bulgaria"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:padding="@dimen/default_padding">

                        <Button
                            android:id="@+id/sellTicketBtn"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sell Ticket" />

                        <TextView
                            android:id="@+id/ticketPriceInUsdView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5.00$"
                            android:textAlignment="textEnd"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </FrameLayout>

    </FrameLayout>

</android.support.v4.widget.SwipeRefreshLayout>